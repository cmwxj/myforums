    <!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

    <html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en-US">

    <head>
      <title><%= @page_title || '论坛系统' %></title>
      <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
      <%= stylesheet_link_tag 'style','pagination','scaffold' %>
      <%= javascript_include_tag :defaults %>
      <%= include_yui_editor_if_used %>
    </head>
    <body>
    <!-- ##### Header ##### -->    
     <div id="header">
      <div class="superHeader">
         <% if logged_in? %>
              <span>You are logged in as: </span>
         <%= current_user.username %>
         <% else %>
         <span>欢迎来此！</span>
         <% end %>
       </div>   
          <div class="midHeader">
            <h1 class="headerTitle" lang="la">论坛</h1>
          </div>
       <div class="subHeader">
      <span class="doNotDisplay">Navigation:</span>
      <% if logged_in? %> 
         <%= link_to_unless_current "论坛首页", root_url  %> |
         <%= link_to_unless_current '注销登陆', logout_url  %>|
       <% else %>
         <%= link_to_unless_current "论坛首页", root_url  %>|
         <%= link_to_unless_current "用户注册", new_user_url  %>|
         <%= link_to_unless_current '用户登录', login_url  %>|
         <%= link_to_unless_current '忘记密码', new_password_reset_url  %>|
       <% end %> 
       <%= link_to_unless_current '联系我们', :controller => 'contact'  %>
       </div>
     
        </div>

        <!-- ##### Main Copy ##### -->

        <div id="main-copy">
         <% flash.each do |key,value| %>
         <div id="flash" class="flash_<%= key %>" >
          <span class="message"><%= value %></span>
         </div>
         <% end -%>

         <%= yield :layout %>
        </div>

      </body>
    </html>

